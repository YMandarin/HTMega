{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "hasm",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#numeric"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#symbol"	
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control",
				"match": "(?i)\\b(nop|end|mov|ld|ldi|ild|st|ist|isti|push|pushi|pop|lpm|ilpm|stm|istm|istmi|jmp|ijmp|jhi|jslo|jge|jlt|jeq|jneq|jshi|jlo|jmi|jpl|rjmp|rijmp|rjhi|rjslo|rjge|rjlt|rjeq|rjneq|rjshi|rjlo|rjmi|rjpl|jfzs|jfcs|jfns|jfvs|jfts|jfis|jfrs|jfps|jfzc|jfcc|jfnc|jfvc|jftc|jfic|jfrc|jfpc|rjfzs|rjfzs|rjfcs|rjfns|rjfvs|rjfts|rjfis|rjfrs|rjfps|rjfzc|rjfcc|rjfnc|rjfvc|rjftc|rjfic|rjfrc|rjfpc|add|addc|sub|subc|mul|div|muls|divs|and|or|xor|cp|cpc|addi|addci|subi|subci|muli|divi|mulsi|divsi|andi|ori|xori|cpi|cpci|is|com|neg|inc|dec|swap|lsl|lsr|rol|ror|asr|tst)\\b"
			}]
		},
		"numeric": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "(?i)\\b(([0-9]+)|(0x[0-9a-f]*)|(0b[01]*))\\b"
				}
			]
		},
		"symbol": {
			"patterns": [
				{
					"name": "constant.character",
					"match": "(?i)\\b(pa_in|pb_in|pc_in|pd_in|pa_out|pb_out|pc_out|pd_out|pa_conf|pb_conf|pc_conf|pd_conf|uart_conf|uart_td|uart_rd|tima_val|timb_val|tima_top|timb_top|tima_comp|timb_comp|tima_conf|timb_conf|micr_l|micr_h|alu_b|sp|iaddr|pc|flags)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"begin": "//",
					"end": "\n",
					"name": "comment"
				}
			]
		}
	},
	"scopeName": "source.hasm"
}
